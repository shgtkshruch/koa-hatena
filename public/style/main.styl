* {
  box-sizing: border-box;
}
body {
  font-family: Helvetica;
  font-size: 16px;
  line-height: 1.8;
  letter-spacing: 0.5px;
  color: #2d2d2d;
}
a {
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}
img {
  vertical-align: bottom;
}
ul,
ol {
  list-style: none;
  margin: 0;
  padding: 0;
}
p {
  margin-bottom: 0;
}
.main {
  width: 48em;
  margin: 0 auto;
  border-collapse: collapse;
}
.header__title {
  text-align: center;
}
.hb {
  position: relative;
  padding: 1.3em 0;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.hb__wrap {
  margin-left: 76px;
}
.hb.with-body:after {
  position: absolute;
  top: 0.4em;
  right: 0.4em;
  width: 0.3em;
  height: 0.3em;
  background-color: #fff;
  content: '';
  border-radius: 50%;
}
.hb__title {
  font-size: 1.2em;
  display: inline-block;
  line-height: 1.2;
  font-weight: bold;
  text-decoration: none;
  color: #03b5e5;
}
.hb__count {
  font-size: 16px;
  font-weight: 100;
  width: 4em;
  height: 2em;
  line-height: 2em;
  margin: 0;
  text-align: center;
  color: #fff;
  background-color: #2ecbf5;
/* border-radius: 0% 0% 50% 50%; */
  cursor: pointer;
}
.hb__thumb > img {
  border-radius: 50%;
  border: 1px solid #b9b9b9;
}
.hb__desc {
  padding: 0.5em 1em;
  margin: 1em 0 0;
  background-color: #f0faff;
  border: 1px solid #b9e8ff;
  border-radius: 3px;
  font-size: 15px;
}
.hb__body {
  font-size: 15px;
  height: 0;
  line-height: 1.7;
  opacity: 0;
  transition: 0.5s;
  transition-property: height, opacity;
}
.hb__body.active {
  height: 100%;
  margin-bottom: 0;
  opacity: 1;
}
.hb__creator {
  font-size: 18px;
}
.hb__footer {
  position: absolute;
  top: 0;
  right: 0;
}
.meta {
  font-size: 15px;
  overflow: hidden;
}
.meta__item {
  float: left;
  margin-right: 0.5em;
  line-height: 62px;
  display: block;
}
.meta > ul > .meta__item {
  float: none;
  line-height: 2;
}
.meta ul {
  display: inline-block;
  margin-left: 0.5em;
}
.cmts {
  position: absolute;
  right: 3em;
  width: 26em;
}
.comment {
  margin: 0;
  font-size: 14px;
  line-height: 1.4;
}
.hbc {
  margin-bottom: 0.7em;
  font-size: 12px;
}
.hbc__meta {
  overflow: hidden;
  color: #b5b5b5;
}
.hbc__meta > li {
  float: left;
  margin-right: 1em;
}
.wrap {
  overflow-y: scroll;
  overflow-x: hidden;
  height: calc(60vh);
  padding-right: 0.5em;
  margin-top: -0.3em;
}
.wrap + .cmts__close {
  display: block;
}
.cmts__close {
  display: none;
  position: absolute;
  top: -2.5em;
  left: -0.5em;
  height: 2em;
  width: 2em;
  margin-bottom: 0.5em;
  cursor: pointer;
}
.cmts__close:before,
.cmts__close:after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  background-color: #000;
  width: 1px;
  height: 1.5em;
}
.cmts__close:before {
  transform: translate(-50%, -50%) rotate(45deg);
}
.cmts__close:after {
  transform: translate(-50%, -50%) rotate(-45deg);
}
.hb__thumb {
  float: left;
  margin-left: -76px;
  margin-top: -4px;
}
.hb__user {
  position: relative;
  margin: 0 0.6em 0 0;
}
.hb__date {
  margin: 0;
}
