ol.main
  each hb, i in hbs
    if hb.body
      - var body = 'with-body'
    else
      - var body = ''

    li(class="hb #{body}")
      .hb__wrap
        .hb__header
          img.hb__thumb(src="http://cdn1.www.st-hatena.com/users/ko/#{hb.creator}/profile.gif" width="62" height="62")
          span.hb__user #{hb.creator}
          span.hb__date #{hb.date}

        .hb__content
          a.hb__title(href="#{hb.link}" target="_blank") #{hb.title}
          if hb.description
            p.hb__desc #{hb.description}
          if hb.body
            p.hb__body #{hb.body}

        .hb__footer
          p.hb__count #{hb.hatenaBookmarkCount}

