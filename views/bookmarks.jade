ol.main
  - for (var i = 0; i < Math.floor(hbs.length / 4); i++) 
    ol.row
      - for (var j = 0; j < 4; j++)
        - var hb = hbs[4 * i + j]
        if hb.body
          - var body = 'with-body'
        else
          - var body = ''
        li(class="hb #{body}")
          ul.meta
            li.meta__item.hb__count #{hb.hatenaBookmarkCount}
            li.meta__item.hb__thumb 
              img(src="http://cdn1.www.st-hatena.com/users/ko/#{hb.creator}/profile.gif" width="62" height="62")
            ul
              li.meta__item.hb__creator #{hb.creator}
              li.meta__item.hb__date #{hb.date}
          a.hb__title(href="#{hb.link}") #{hb.title}
          if hb.description
            p.hb__desc #{hb.description}
          if hb.body
            p.hb__body #{hb.body}
